<div class="row">
	<div class="col s12">
		<ul class="tabs tabs-fixed-width">
			<li class="tab"><a href="#" class="active">Santa</a></li>
			<li class="tab"><a href="#" onclick="apretaste.send({command:'SANTA ARBOL'})">Arbolito</a></li>
			<li class="tab"><a href="#" onclick="apretaste.send({command:'SANTA REGLAS'})">Reglas</a></li>
		</ul>
	</div>
</div>

<div class="row">
	<div class="col s12 speech-bubble-wrapper">
		<div class="speech-bubble">
			<div class="arrow"></div>
			<%= message %>
		</div>
		<div class="santa-avatar circle" style="background-image:url('{{APP_SERVICE_PATH}}/images/santa.png');"></div>
	</div>

	<div class="col s12">
		<img src="{{APP_IMAGE_PATH}}/<%= image %>" alt="santa" width="100%">
	</div>
</div>

<div class="fixed-action-btn">
	<a class="btn-floating btn-large green" onclick="apretaste.send({command: 'SANTA'});">
		<i class="large material-icons">refresh</i>
	</a>
</div>
